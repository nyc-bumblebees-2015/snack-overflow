<div class="add_comment">
  <a href="#" class="comment_link">Add a new comment</a>

  <div class="comment_form">
    <%= form_for [commentable_type, comment] do |f| %>
      <div class="content">
      <%= f.text_area :content %>
      </div>
      <%= f.submit 'Post Comment'%>
    <% end %>
  </div>
</div>