<h1>Profile</h1>
<div id='user_profile'>
  <ul>
    <li id='image'><%= gravatar_for @user %></li>
    <li>Name: <%= @user.username %></li>
    <li>Email: <%= @user.email %></li>
  </ul>
<br><br>
<%= button_to "Edit Profile", edit_user_path, :method => 'get' %>
<br><br>
<div>These are the questions you've asked</div>

<ul id='questions_asked'>
<% @user.questions.each do |question| %>
  <li><%= link_to question.title, question %><li>
<% end %>
</ul>

<br><br>
<div>These are the questions you've answered</div>
<ul id='answers_given'>
  <% @questions.each do |question| %>
    <li><%= link_to question.title, question %><li>
  <% end %>
</ul>